<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/donationReasonEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Give us a reason for why the item should be donated to you."/>

    <TextView
        android:id="@+id/donationReasonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_margin="24dp"
        android:textSize="16sp"/>

</FrameLayout>